{
  "compilerOptions": {
    "baseUrl": "sarif",
    "moduleResolution": "nodenext",
    "target": "esnext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "nodenext",
    "lib": ["esnext"],
    "declaration": true,
    "strict": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./sarif"
  },
  "paths": {
      "*": ["node_modules/*", "src/types/*"]
  },
  "include": [
    "sarif/index.ts"
  ]
}
